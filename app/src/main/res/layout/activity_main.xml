            app:cardElevation="2dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp">

            <ImageView
                android:id="@+id/cocktail"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/cocktail"
